<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#f2efef">
	<TextView android:layout_height="10dp"
	          android:background="@color/my_bac_gray"/>
	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/film_image"
			android:layout_width="100dp"
			android:layout_height="150dp"
			android:padding="10dp"
			android:src="@mipmap/ic_launcher"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="10dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/film_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="片名"
				android:textColor="#535151"
				android:textSize="18sp"/>
			<TextView
				android:id="@+id/film_tag"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:text="类型"
				android:textColor="#7e7d7d"
				android:textSize="13sp"/>
			<TextView
				android:id="@+id/film_act"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxEms="10"
				android:singleLine="true"
				android:text="主演"
				android:textColor="#7e7d7d"
				android:textSize="13sp"/>
			<TextView
				android:id="@+id/film_year"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxEms="10"
				android:text="年份"
				android:textColor="#7e7d7d"
				android:textSize="13sp"/>
		</LinearLayout>
	</TableRow>
	<TextView
		android:layout_height="10dp"
		android:background="@color/my_bac_gray"/>
</TableLayout>
