<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:background="@color/my_bac_gray"
	              android:orientation="vertical">
		<ImageView
			android:id="@+id/film_cover"
			android:layout_width="150dp"
			android:layout_height="200dp"
			android:layout_gravity="center"
			android:background="@mipmap/ic_launcher"/>
	</LinearLayout>
	<TextView android:layout_width="match_parent"
	          android:layout_height="3dp"
	          android:background="@color/my_bac_gray"/>
	<ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="match_parent"
		              android:background="#ffffff"
		              android:orientation="vertical">
			<TextView android:id="@+id/film_title"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:layout_marginStart="5dp"
			          android:layout_marginTop="5dp"
			          android:text="片名"
			          android:textSize="20sp"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="3dp"
			          android:background="@color/my_bac_gray"/>
			<LinearLayout android:layout_width="match_parent"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">
				<TextView android:id="@+id/film_tag"
				          android:layout_width="0dp"
				          android:layout_height="wrap_content"
				          android:layout_marginStart="5dp"
				          android:layout_marginTop="5dp"
				          android:layout_weight="1"
				          android:ellipsize="end"
				          android:singleLine="true"
				          android:text="类型:"
				          android:textSize="15sp"/>
				<TextView android:id="@+id/film_year"
				          android:layout_width="0dp"
				          android:layout_height="wrap_content"
				          android:layout_marginStart="5dp"
				          android:layout_marginTop="5dp"
				          android:layout_weight="1"
				          android:text="年份:"
				          android:textSize="15sp"/>
			</LinearLayout>
			<TextView android:layout_width="match_parent"
			          android:layout_height="3dp"
			          android:background="@color/my_bac_gray"/>

			<LinearLayout android:layout_width="match_parent"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">
				<TextView android:id="@+id/film_dir"
				          android:layout_width="0dp"
				          android:layout_height="wrap_content"
				          android:layout_marginStart="5dp"
				          android:layout_marginTop="5dp"
				          android:layout_weight="1"
				          android:ellipsize="end"
				          android:singleLine="true"
				          android:text="导演:"
				          android:textSize="15sp"/>
				<TextView android:id="@+id/film_area"
				          android:layout_width="0dp"
				          android:layout_height="wrap_content"
				          android:layout_marginStart="5dp"
				          android:layout_marginTop="5dp"
				          android:layout_weight="1"
				          android:ellipsize="end"
				          android:singleLine="true"
				          android:text="区域:"
				          android:textSize="15sp"/>
			</LinearLayout>
			<TextView android:layout_width="match_parent"
			          android:layout_height="3dp"
			          android:background="@color/my_bac_gray"/>
			<TextView android:id="@+id/film_act"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:layout_marginStart="5dp"
			          android:layout_marginTop="5dp"
			          android:ellipsize="end"
			          android:singleLine="true"
			          android:text="主演："
			          android:textSize="15sp"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="3dp"
			          android:background="@color/my_bac_gray"/>
			<TextView android:id="@+id/film_desc"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:layout_marginStart="5dp"
			          android:layout_marginTop="5dp"
			          android:text="    介绍:"
			          android:textColor="#201f1f"
			          android:textSize="18sp"/>
			<TextView android:layout_width="match_parent"
			          android:layout_height="10dp"
			          android:background="@color/my_bac_gray"/>
			<TextView android:id="@+id/film_playlink"
			          android:textColor="#3f8b04"
			          android:layout_gravity="center"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:layout_marginStart="5dp"
			          android:layout_marginTop="5dp"
			          android:text="开始播放:"
			          android:background="#ffffff"
			          android:textSize="15sp"/>
			<LinearLayout android:layout_width="match_parent"
			              android:layout_height="wrap_content">
				<ImageButton
						android:id="@+id/play"
						android:background="#ffffff"
						android:src="@mipmap/play"
						android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
