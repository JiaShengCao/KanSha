<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#cfcdcd"
	android:orientation="vertical"
	tools:context="com.kansa.cjs.kansa.MainActivity">
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="50dp"
	              android:orientation="horizontal">
		<Button
			android:id="@+id/Btn_cancel"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="10dp"
			android:layout_weight="1"
			android:background="#edeaea"
			android:text="@string/cancel"/>

		<com.kansa.cjs.kansa.widge.MyEditextWithDele
			android:textColor="#e6e3e3"
			android:id="@+id/ET_info"
			android:layout_width="0dp"
			android:layout_height="40dp"
			android:layout_marginEnd="10dp"
			android:layout_marginStart="10dp"
			android:layout_weight="4"
			android:background="@drawable/bg_myedittext"/>

		<Button
			android:id="@+id/Btn_find"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginEnd="10dp"
			android:layout_weight="1"
			android:background="#edeaea"
			android:text="@string/find"/>
	</LinearLayout>

	<ListView
		android:id="@+id/film_list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	</ListView>


</LinearLayout>
